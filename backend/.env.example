# Google AI Studio (Gemini API) - LLM 호출용
# 발급: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# LLM 모델 설정 (LiteLLM 형식, gemini/ 프리픽스 필수)
LLM_MODEL=gemini/gemini-3-flash-preview
IMAGE_MODEL=imagen-4.0-fast-generate-001

# Google Cloud Vertex AI (Imagen 이미지 생성용)
# 1. Google Cloud Console에서 Vertex AI API 활성화
# 2. 서비스 계정 생성 후 JSON 키 다운로드
# 3. JSON 파일을 backend/credentials/ 폴더에 복사
GOOGLE_APPLICATION_CREDENTIALS=credentials/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1

# 서버 설정
BACKEND_PORT=8080
CORS_ORIGINS=["http://localhost:3000"]

# 관리자 인증
ADMIN_PASSWORD=your_admin_password_here
